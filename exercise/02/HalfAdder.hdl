/**
 * Computes the sum of two bits.
 */

CHIP HalfAdder {
    IN a, b;    // 1-bit inputs
    OUT sum,    // Right bit of a + b 
        carry;  // Left bit of a + b

    PARTS:
    // Put you code here:
    Not(in=a, out=nota);
    Not(in=b, out=notb);
    And(a=a, b=notb, out=aAndnb);
    And(a=nota, b=b, out=naAndb);
    Or(a=aAndnb, b=naAndb, out=sum);
    And(a=a, b=b, out=carry);
}
